                              loading="lazy"
                            />
                            <div class="flex-1 min-w-0">
                              <div class="text-xs font-medium text-gray-900 truncate">{location.city}, {location.country}</div>
                              <div class="text-xs text-gray-500 truncate">{location.code} • {location.region}</div>
                            </div>
